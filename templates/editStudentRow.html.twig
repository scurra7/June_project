{% extends '_base.html.twig' %}

{# ----------------------------------------#}
{% block title %}
    Student Page
{% endblock %}

{# ----------------------------------------#}
{% block projectsNavStyle %}current_page{% endblock %}

{# ----------------------------------------#}
{% block main %}

    <form method="post" action="/editStudentDetails">



        <p>
            Student Id:
            <br>
            <input type="text" name="id" value="{{ studentRow.id }}">
        </p>


        <p>
            Student Surname:
            <br>
            <input type="text" name="surname" value="{{ studentRow.surname }}">
        </p>

        <p>
            First Name:
            <br>
            <input type="text" name="firstName" value="{{ studentRow.firstName }}">
        </p>

        <p>
            Joined Club:
            <br>
            <input type="text" name="joinedClub" value="{{ studentRow.joinedClub }}">
        </p>


        <p>
            Last Grading:
            <br>
            <input type="text" name="lastGrading" value="{{ studentRow.lastGrading }}">
        </p>

        <p>
            Current Grading:
            <br>
            <input type="text" name="currentGrade" value="{{ studentRow.currentGrade }}">
        </p>

        <p>


            <input type="submit"  value="Edit">
        </p>

    </form>

